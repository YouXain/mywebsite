<!DOCTYPE html>
<html>
<head>
  	<title>Note Pad</title>
  	<%= stylesheet_link_tag('application', :media => 'all') %>
</head>
<body>
	<div id="npheader">
		<h2>Note Pad</h2>
	</div>

		<% if !flash[:notice].blank? %>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
		<% end %>
		<div id="npsection">
			<div id="npnav">
				<%= render(:partial => 'layouts/leftnav', :locals => {:note_pads => @note_pads}) %>
			</div>
			<%= yield %>
		</div>
	<div id="npfooter">
		<p id="copyright">&copy; Youxian Chen</p>
	</div>
</body>
</html>
